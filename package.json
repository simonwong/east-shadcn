{
  "name": "easy-shadcn",
  "private": true,
  "scripts": {
    "dev": "turbo dev --filter=@easy-shadcn/storybook",
    "docs": "turbo dev --filter=@easy-shadcn/docs",
    "build": "turbo build",
    "lint": "turbo lint",
    "clean": "turbo clean && rimraf .turbo",
    "ci:version": "changeset version",
    "ci:publish": "turbo build --filter={./packages/*} && changeset publish"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "@storybook/react": "^8.2.8",
    "eslint": "^8.57.0",
    "prettier": "^3.2.5",
    "rimraf": "^6.0.1",
    "tsup": "^8.2.4",
    "turbo": "^2.0.11",
    "typescript": "^5.5.4"
  },
  "packageManager": "pnpm@8.15.6",
  "engines": {
    "node": ">=18",
    "pnpm": ">=8.x"
  }
}
